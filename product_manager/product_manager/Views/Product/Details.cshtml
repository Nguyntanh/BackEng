@model Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Product Information</h4>
        <dl class="row">
            <dt class="col-sm-3">Product ID</dt>
            <dd class="col-sm-9">@Model.ProductID</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Stock Quantity</dt>
            <dd class="col-sm-9">@Model.StockQuantity</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category</dd>
        </dl>
    </div>

    <div class="col-md-6">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.ProductID" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.ProductID" class="btn btn-danger" 
           onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
    </div>
</div>
