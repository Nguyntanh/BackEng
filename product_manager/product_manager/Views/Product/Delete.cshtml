@model Product

<h2>Delete Product</h2>

<p>Are you sure you want to delete this product?</p>

<table class="table">
    <tr><th>ProductID</th><td>@Model.ProductID</td></tr>
    <tr><th>Name</th><td>@Model.Name</td></tr>
    <tr><th>Description</th><td>@Model.Description</td></tr>
    <tr><th>Price</th><td>@Model.Price</td></tr>
    <tr><th>Stock Quantity</th><td>@Model.StockQuantity</td></tr>
    <tr><th>Category</th><td>@Model.Category</td></tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ProductID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
